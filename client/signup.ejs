<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <link rel="stylesheet" href="/signup_style.css">
</head>
<body>
    <div id="signUpDiv">
        <h1 id="signUpFormTag">Sign Up</h1>
        <form id="signUpForm">

            <label for="username">Username:</label>
            <input type="text" id="username" name="username" placeholder="Username"> <br>
            <label for="password">Password:</label>
            <input type="text" id="password" name="password" placeholder="Password"><br>
            <label for="last-name">Last Name:</label>
            <input type="text" id="last-name" name="last-name" placeholder="Last Name"><br>
            <label for="given-name">Given Name:</label>
            <input type="text" id="given-name" name="given-name" placeholder="Given Name"><br>
            <label for="email-address">Email:</label>
            <input type="text" id="email-address" name="email-address" placeholder="Email-Address"><br>


            <button type="submit" value="user">Sign up as User</button>
            <button type="submit" value="librarian">Sign up as Librarian</button>
        </form>
    </div>
<script>
document.getElementById('signUpForm').addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent default form submission

    // Get the value of the clicked button (either 'librarian' or 'user')
    const action = event.submitter.value;

    // Get form input values
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;
    const email_address = document.getElementById('email-address').value; // Make sure this ID matches your HTML
    const last_name = document.getElementById('last-name').value; // Make sure this ID matches your HTML
    const given_name = document.getElementById('given-name').value; // Make sure this ID matches your HTML
    
    // Prepare signup credentials object
    const sign_creds = {
        username, password, email_address, email_address, last_name, given_name
    };

    // Perform different actions based on the value of the clicked button
    if (action === 'librarian') {
        // Code to register as a librarian
        fetch('/librarians', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(sign_creds)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to register as a librarian. Server returned ' + response.status);
            }
            return response.json();
        })
        .then(data => {
            console.log('Successfully Registered as a Librarian', data);
            alert('Successfully Registered as a Librarian');
            window.location.href = '/login';
        })
        .catch(error => {
            console.error('Error', error);
            alert('Failed to Register as Librarian. Please Try again');
        });
    } else if (action === 'user') {
        // Code to register as a user
        fetch('/users', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(sign_creds)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error('Failed to register as a user. Server returned ' + response.status);
            }
            return response.json();
        })
        .then(data => {
            console.log('Successfully Registered as a User', data);
            alert('Successfully Registered as a User');
            window.location.href = '/login';
        })
        .catch(error => {
            console.error('Error', error);
            alert('Failed to Register as User. Please Try again');
        });
    }
});
</script>
</body>
</html>